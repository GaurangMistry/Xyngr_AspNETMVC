@model IEnumerable<xyngr.Models.UsersViewModel>
@Styles.Render("~/Content/GridCSS")
<style></style>
<section class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-head">
                <div class="card-header">
                    <h4 class="card-title">All Users</h4>
                    <div class="messageDiv">
                        <label>@ViewBag.Message</label>
                    </div>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button class="btn btn-primary btn-sm" onclick="javascript:window.location.href='/Admin/User/Create'"><i class="ft-plus white"></i> Add User</button>
                    </div>
                </div>
            </div>

            <div class="card-content">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="users-contacts" class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th class="text-center">Phone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="22%">
                                            @item.FirstName
                                        </td>
                                        <td width="22%">
                                            @item.LastName
                                        </td>
                                        <td width="22%">
                                            @item.Email
                                        </td>
                                        <td width="22%" class="text-center">
                                            @item.Phone
                                        </td>
                                        <td width="10%">
                                            @if (!item.Email.Equals("admin@xyngr.com"))
                                            {
                                                @Html.ActionLink("Edit", "Edit", "User", new { id = item.UserID }, null)
                                                <span>|</span> @Html.ActionLink("Delete", "Delete", "User", new { id = item.UserID }, new { onclick = "return DeleteAlert();" })
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/bundles/GridJS")

<script src="~/Scripts/Admin/User/UserList.js"></script>
<script type="text/javascript">
    function DeleteAlert() {
        return confirm("Are you sure you want to delete record?");
    }
</script>