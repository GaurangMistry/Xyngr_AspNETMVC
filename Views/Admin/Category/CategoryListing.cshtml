@model IEnumerable<xyngr.Models.CategoryViewModel>
@Styles.Render("~/Content/GridCSS")

<section class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-head">
                <div class="card-header">
                    <h4 class="card-title">All Categories</h4>
                    <div class="messageDiv">
                        <label>@ViewBag.Message</label>
                        <label class="messageDivError">@ViewBag.ErrorMessage</label>
                    </div>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button class="btn btn-primary btn-sm" onclick="javascript:window.location.href='/Admin/Category/Create'"><i class="ft-plus white"></i>Add Category</button>
                    </div>
                </div>
            </div>

            <div class="card-content">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="category-contacts" class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Parent Category</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="40%">
                                            @item.CategoryName
                                        </td>
                                        <td width="40%">
                                            @item.ParentCategory
                                        </td>
                                        <td width="10%">
                                            @if (item.Status)
                                            {
                                                <span class="active">Activate</span>
                                            }
                                            else
                                            {
                                                <span class="danger">Inactivate</span>
                                            }
                                        </td>
                                        <td width="10%">
                                            @Html.ActionLink("Edit", "Edit", "Category", new { id = item.CategoryID }, null)
                                            | @Html.ActionLink("Delete", "Delete", "Category", new { id = item.CategoryID }, new { onclick = "return DeleteAlert();" })

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
@Scripts.Render("~/bundles/GridJS")

<script src="~/Scripts/Admin/Category/CategoryList.js"></script>
<script type="text/javascript">
    function DeleteAlert() {
        return confirm("Are you sure you want to delete record?");
    }
</script>
